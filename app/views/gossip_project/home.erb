<div class="container">
  <div class="text-center">
    <h1>Hi Friend!</h1>
  </div>

  <div class="text-center">
    <h2> ⬇️ Here are the latest Gossips that we've heard of ⬇️ </h2> 
  </div>

  <div class="row justify-content-center">
    <% @gossips.each do |gossip| %>

      <div class="card gossip-card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= gossip.user.first_name%></h5>
          <p class="card-text"><%= gossip.title%></p>

          <div class="btn btn-secondary"><%= link_to "See this gossip", gossip_path(gossip.id)%></div>
        </div>
      </div>
    
    <% end %>
  </div>

</div>