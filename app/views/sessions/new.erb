    
<div class="container h-100 text-center">

<div class="col h-100 justify-content-center align-items-center">

  <%= link_to image_tag('favicon-32x32.png', :alt => 'logo'), gossip_project_home_path %>
  
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    
  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <p><%= alert %></p>
    </div>
  <% end %>

  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
      <%= label_tag 'Email', name="Email" %>
      <%= text_field_tag :email, params[:email], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'Password', name="Password" %>
      <%= text_field_tag :password, params[:password], class: 'form-control'%>
    </div>
    <div class="form-group">
    <%= check_box_tag :remember, params[:remember], class: 'form-control' %>
    <%= label_tag 'Remember me' %>
    </div>
    <div class="form-group d-flex">
      <%= submit_tag "Login", :class => "btn btn-secondary mx-auto" %>
    </div>
  <% end %>

  <p>Don't have an account ? <%= link_to "Subscribe here", new_user_path, :class => "new-link" %></p>

</div>
</div>