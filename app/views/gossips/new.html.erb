<div class="text-center m-5">
  <h2>Create your gossip right here!</h2>
</div>


<div class="form-group text-center">
  <%= form_tag url_for(action: 'create'), method: "post" do %>

  <%= label_tag 'Title', name="Title" %>
  <%= text_field_tag 'title' %>
  <br /> <br />

  <%= label_tag 'Content', name="Content" %>
  <%= text_area_tag 'content'%>
  <br /> <br />

  <%= submit_tag "Send Gossip", class:"btn btn-primary" %>

  <% end %>
</div>
